generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model CatalogProducts {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  description         String
  height              Float
  length              Float
  width               Float
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

model User {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  email               String    @unique
  password            String
  phone               String
  imgProfile          String
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}

model AccessToken {
  id                  String    @id @default(auto()) @map("_id") @db.ObjectId
  userId              String    @db.ObjectId
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
}